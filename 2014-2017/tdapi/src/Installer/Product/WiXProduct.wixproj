  <PropertyGroup>
    <PostBuildEvent>if exist "..\..\publish" rmdir /S /Q "..\..\publish"
if exist "..\Generated" rmdir /S /Q "..\Generated"

rem xcopy "$(TargetDir)%2a.msi" "$(ProjectDir)%2a.msi" /c /y /d /S
