rem ren "$(ProjectDir)Installer.msi" Product.msi

xcopy "$(TargetDir)%2a.msi" "$(ProjectDir)..\..\MSI\%2a.msi" /c /y /d /S

copy "$(TargetDir)installer.msi" "$(ProjectDir)..\..\..\..\etdplatform\Statix\installer\MSI\tdapi.msi"
