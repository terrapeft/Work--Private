@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "MasterFowTemplate.cshtml";
    var k = 0;
}

<style type='text/css'>

.carousel-bounds {
    width: 680px;
    height: 410px;
}

#carousel-custom .inner-data h2, #carousel-custom .inner-data h4 {
    color: white;
    margin: 5px 0 -20px 25px;
}

#carousel-custom .carousel-indicators {
        right: 10px;
    margin-left: 0;
    padding-left: 20px;
    text-align: left;
    width: auto;
    z-index: 15;
    position: relative;
    left: 510px;
    top: -75px;
}

#carousel-custom .carousel-indicators .active {
    margin: 1px;
            height: 20px;
        width: 20px;

}

    #carousel-custom .carousel-indicators li {
        background-color: transparent;
        border-width: 0;
        height: 20px;
        width: 20px;
    }

        #carousel-custom .carousel-indicators li span {
            display: block;
            background: url(@Umbraco.TypedMedia(CurrentPage.carouselPageIndicator).Url);
            width: 27px;
            height: 20px;
            position: relative;
        }

    #carousel-custom .carousel-indicators .active span {
        display: block;
        background: url(@Umbraco.TypedMedia(CurrentPage.carouselActivePageIndicator).Url);
    }
    
#carousel-custom .item img {
    overflow: visible;
    opacity: 0.65;
    filter: alpha(opacity=65); /* For IE8 and earlier */
}

#carousel-custom .item a {
    position: relative;
    top: -277px;
    padding: 2px 12px;
    margin-right: -13px;
}

#carousel-custom .item-image {
    position: relative;
    top: -240px;
    left: 25px;
}

#carousel-custom .under-text {
    width: 280px;
    height: 207px;
}

</style>

<br />

<div class="carousel-bounds" style="background: url(@Umbraco.TypedMedia(CurrentPage.carouselBackgroundImage).Url)">
    <div id="carousel-custom" class="carousel carousel-fade slide" data-ride="carousel" style="width: 300px;">
        <div class='carousel-outer carousel-bounds'>
            <div class="carousel-inner carousel-bounds">
                @foreach (var item in CurrentPage.carouselItems)
                {
                    <div class="item carousel-bounds @((k++ == 0) ? "active" : string.Empty)">
                        <div class="inner-data carousel-bounds">
                            <h2>@item.GetValue("carouselItemHeader")</h2>
                            <h4>@item.GetValue("carouselItemText")</h4>

                        </div>
                        <div class="under-text pause-on-hover">
                            <img class="item-image" src="@Umbraco.TypedMedia(@item.GetValue("carouselItemImage")).Url" alt="">

                            <a target="@item.GetValue("carouselItemButtonTarget")"
                               class="btn btn-primary fright"
                               href="@item.GetValue("carouselItemButtonLink")">@item.GetValue("carouselItemButtonText")</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <ol class="carousel-indicators">
            <li data-target='#carousel-custom' data-slide-to='0' class='active'><span style="top: 1px;"></span></li>
            <li data-target='#carousel-custom' data-slide-to='1'><span style="top: 5px;"></span></li>
            <li data-target='#carousel-custom' data-slide-to='2'><span style="top: 9px;"></span></li>
            <li data-target='#carousel-custom' data-slide-to='3'><span style="top: 12px;"></span></li>
            <li data-target='#carousel-custom' data-slide-to='4'><span style="top: 14px;"></span></li>
        </ol>
    </div>
</div>

<br />
