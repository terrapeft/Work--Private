@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var bottomButtons = CurrentPage.bottomButtons;
}

@foreach (var button in bottomButtons)
{
    @Html.Raw(
        Umbraco.RenderMacro("Button", new {
            Style="margin-right: 7px;", 
            Target=button.GetValue("linkTarget"), 
            Class=button.GetValue("class"), 
            Href=button.GetValue("link"), 
            Text=button.GetValue("text"),
			Description=button.GetValue("description")
        })
    );
}